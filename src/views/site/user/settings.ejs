<%- include('../../admin/partials/header', {title: 'Login'}); %>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header"><h3 class="">Change Password</h3></div>
            <div class="card-body">
                <form>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="oldPassword" type="password" placeholder="Old password" />
                        <label for="inputPassword">Old password</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="newPassword" type="password" placeholder="New password" />
                        <label for="inputPassword">New password</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="newPasswordConfirm" type="password" placeholder="New password confirmation" />
                        <label for="inputPassword">New password confirmation</label>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-end mt-4 mb-0">
                        <button onclick="changePassword(event);" class="btn btn-primary">Change Password</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

<%- include('../../admin/partials/footer'); %>