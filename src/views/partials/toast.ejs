<% 
if (locals.toasts) {
locals.toasts.forEach(function(toast) { %>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            createToast('<%- toast.type %>','<%- toast.title %>','<%- toast.message %>');
        });
    </script>
<% });
} %>